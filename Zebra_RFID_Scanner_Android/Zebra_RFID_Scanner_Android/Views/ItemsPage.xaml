<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zebra_RFID_Scanner_Android.Views.ItemsPage"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:Zebra_RFID_Scanner_Android.ViewModels"  
             xmlns:model="clr-namespace:Zebra_RFID_Scanner_Android.Models"  
             x:Name="BrowseItemsPage">

    <ContentPage.ToolbarItems>
        
        <ToolbarItem Text="Add" Command="{Binding AddItemCommand}" />
    </ContentPage.ToolbarItems>
    <!--
      x:DataType enables compiled bindings for better performance and compile time validation of binding expressions.
      https://docs.microsoft.com/xamarin/xamarin-forms/app-fundamentals/data-binding/compiled-bindings
    -->

    <StackLayout>
        <Button Text="Send Api" Command="{Binding Aa}" IsEnabled="{Binding IsValidLogin}" BackgroundColor="#2196F3" TextColor="White" />
    </StackLayout>
    
</ContentPage>
